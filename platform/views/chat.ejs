<%- include ('templates/header') -%>
<%- include ('templates/navbar_full') -%>
<script src="/socket.io/socket.io.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<style>
    #chat {
        overflow: scroll;
        height: 500px;
        color: #23272b;
        white-space: pre-line;
    }
</style>
<div class="container">
    <br>
    <div class="row">
        <div class="col-4" data-s>
            <table class="table table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th colspan="2">Users</th>
                </tr>
                </thead>
                <tbody>
                <% users.forEach((oneUser)=>{ %>
                    <tr>
                        <th scope="row"><a href="/users/<%= oneUser._id %>"><%= oneUser.username %></a></th>
                        <td><%= oneUser.name %></td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
        <div class="col-8">
            <div id="chat" class="row border"></div>
            <div class="row">
                <div class="form-group" style="width: 100%">
                    <button id="send" class="btn btn-primary form-control float-right" style="width: 10%"
                            onclick="sendMsg()">Send
                    </button>
                    <input type="text" class="form-control" id="message" placeholder="Write a message..."
                           autocomplete="off"
                           style="width: 89%"/>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function updateScroll() {
        let element = $('#chat')[0];
        element.scrollTop = element.scrollHeight;
    }

    let socket = io();

    function sendMsg() {
        socket.emit('message', $('#message').val());
        $('#message').val('');
    }

    $('#message').keypress(e => {
        if (e.key === 'Enter') {
            sendMsg();
        }
    });
    socket.on('prevMsg', data => {
        $('#chat').append(': ' + data + "\n");
        updateScroll();
    });
</script>
<%- include ('templates/footer') -%>