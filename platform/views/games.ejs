<%- include ('templates/header') -%>
<% if (typeof session === 'undefined') { %>
    <%- include ('templates/navbar_min') %>
<% } else { %>
    <%- include ('templates/navbar_full') %>
<% } %>

<section class="jumbotron text-center">
    <div class="container">
        <h1>Explore our games!</h1>
        <p class="lead text-muted">Browse more than 69420 games to find the best for you! Join lobbies with other
            players and form a team! There is only one rule: always have fun, be respectful and never rage! Sign up, if
            you are interested in making your own games, or log in if you already have an account.</p>
        <div class="container">
            <% if (typeof session === 'undefined'){ %>
                <a href="/login" class="btn btn-primary my-2">Log in</a>
                <a href="/users/new" role="button" class="btn my-2 btn-outline-primary">Sign up</a>
            <% }else{
            } %>
        </div>
    </div>
</section>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <% games.forEach(oneGame => { %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="/images/games_game_mb.jpg" style="width: 100%">
                        </svg>
                        <div class="card-body">
                            <h3><%= oneGame.name %></h3>
                            <p><%= oneGame.desc %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/games/<%= oneGame._id %>" type="button" class="btn btn-primary">View
                                        <i class="fas fa-eye"></i></a>
                                    <a href="/lobbies/new" type="button" class="btn btn-success">Play <i
                                                class="fas fa-gamepad"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<%- include ('templates/footer_extra') -%>