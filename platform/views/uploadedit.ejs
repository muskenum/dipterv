<%- include ('templates/header') -%>
<%- include ('templates/navbar_full') -%>

<div class="container">
    <div class="row">
        <div class="col-xl-3 col-md-3 col-12">
        </div>
        <div class="col-xl-6 col-md-6 col-12">
            <div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
                <% if (typeof game === 'undefined'){ %><h1>Upload your own game!</h1>
                <p class="lead">Share your game with the world!</p>
                <% }else{ %><h1>Edit your game</h1>
                <p class="lead">They will love it!</p>
                <% } %>
            </div>
            <form id="newGameForm" method="post" enctype="multipart/form-data">
                <input type="hidden" name="_id" value="<%= (typeof game === 'undefined') ? '' : game._id %>"/>
                <div class="form-group">
                    <br>
                    <label for="name">Name of your game</label>
                    <input type="text" class="form-control" id="name" name="name"
                           value="<%= (typeof game === 'undefined') ? '' : game.name %>" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <label for="desc">Description</label>
                    <textarea id="desc" name="desc" class="form-control" form="newGameForm" rows="5"
                              placeholder="Say a few words about your game..."
                              required><%= (typeof game === 'undefined') ? '' : game.desc %></textarea>
                </div>
                <div class="form-group">
                    <label for="gamefile">Select a file to upload</label>
                    <input type="file" class="form-control-file" id="gamefile"
                           name="gamefile" <%= (typeof game === 'undefined') ? '' : game.gamefile %>>
                </div>
                <input type="submit" class="btn btn-primary" value="Save"/>
                <a class="btn btn-link" href="/">Cancel</a>
            </form>
        </div>
        <div class="col-xl-3 col-md-3 col-12">
        </div>
    </div>
</div>

<%- include ('templates/footer') -%>